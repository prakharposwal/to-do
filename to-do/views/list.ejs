<%- include('header'); -%>
        <div class="box" id="heading">
            <h1><%= listTitle %></h1>
        </div>
        <div class="box">
            <% items.forEach(function(item){ %>
                <form style="display: inline;" action="/delete" method="POST">
                    <div class="item">
                        <input type="checkbox" name="checkbox" value="<%= item._id %>" onChange="this.form.submit()">
                        <p><%= item.name  %></p>
                        <input type="text" name="itemDelete" value="<%= item._id %>" style="display: none;">
                        <button type="submit" name="deleteButton" value="">-</button>
                    </div>
                    <input type="hidden" name="listName" value=<%= listTitle %>>
                </form>
            <% }) %>
            <form class="item" action="/add" method="post">
                <input
                        type="text"
                        name="item"
                        class="form-control top"
                        placeholder="New Item"
                        autocomplete="off"
                        required
                        autofocus
                />

                <button type="submit" name="list" value=<%= listTitle %>>
                    +
                </button>
            </form>
        </div>
<%- include('footer'); -%>